<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="outline_text_input_layout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/pine</item>
        <item name="boxStrokeWidth">@dimen/stroke_width_default</item>
        <item name="boxStrokeWidthFocused">@dimen/stroke_width_focused</item>
        <item name="android:textColorHint">@color/evergreen</item>
        <item name="hintTextColor">@color/evergreen</item>
        <item name="endIconTint">@color/forest</item>
    </style>

    <style name="outline_text_input_edit">
        <item name="android:textColor">@color/forest</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="strokeColor">@color/pine</item>
        <item name="strokeWidth">@dimen/stroke_width_default</item>
    </style>
</resources>